<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PollingApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:PollingApp.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="Polling App">

    <ShellContent
                  Title="Home"
                  ContentTemplate="{DataTemplate pages:PollListPage}"
                  Route="PollListPage" />
    <ShellContent Title="Poll Detail"
                  ContentTemplate="{DataTemplate pages:PollDetailPage}"
                  Route="PollDetailPage" />
    <ShellContent Title="Poll Results"
                  ContentTemplate="{DataTemplate pages:PollResultPage}"
                  Route="PollResultPage" />

</Shell>
